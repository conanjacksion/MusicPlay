<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/app_background</item>
        <item name="tabIndicatorStyle">@style/TabIndicatorStyle</item>
    </style>
    
    <style name="TabIndicatorStyle" parent="android:Widget.Holo.Light">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_bg</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="tab_indicator_text">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="list_item_title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle"></item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="list_item_sub_title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="list_item_duration">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle"></item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="grid_item_title">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle"></item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="title_song">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="singer_name">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="current_duration">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="total_duration">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
