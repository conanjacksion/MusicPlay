<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_song_item_height"
    android:descendantFocusability="blocksDescendants"
    >

    <ImageView
        android:id="@+id/image_view_song_thumbnail"
        android:layout_width="@dimen/list_song_item_child_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:padding="8dp"/>
    <CheckBox
        android:id="@+id/chk_add_to_favorite"
        android:layout_width="@dimen/list_song_item_child_width"
        android:layout_height="match_parent"
        android:button="@null"
        android:gravity="center"
        android:background="@drawable/favorite_state"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/txt_view_song_duration"
        android:layout_width="@dimen/list_song_item_child_width"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/chk_add_to_favorite"
        style="@style/list_item_duration"
        />
    <TextView
        android:id="@+id/txt_view_song_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_song_item_child_half_height"
        style="@style/list_item_title"
        android:maxLines="1"
        android:layout_toRightOf="@id/image_view_song_thumbnail"
        android:layout_toLeftOf="@id/txt_view_song_duration"/>
    <TextView
        android:id="@+id/txt_view_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_song_item_child_half_height"
        style="@style/list_item_sub_title"
        android:maxLines="1"
        android:layout_toRightOf="@id/image_view_song_thumbnail"
        android:layout_toLeftOf="@id/txt_view_song_duration"
        android:layout_below="@id/txt_view_song_title"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/list_item_line_bottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/list_song_item_child_width"
        />
</RelativeLayout>